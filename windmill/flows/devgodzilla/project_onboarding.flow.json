{
    "summary": "Project Onboarding Flow",
    "description": "Clone a GitHub repository, analyze its structure, and initialize SpecKit for AI-driven development.",
    "value": {
        "modules": [
            {
                "id": "tgz_emit_refs",
                "value": {
                    "type": "script",
                    "path": "u/devgodzilla/emit_tasksgodzilla_codex_refs"
                },
                "input_transforms": {
                    "run_id": {
                        "type": "javascript",
                        "expr": "flow_input.tgz_run_id || null"
                    },
                    "job_type": {
                        "type": "static",
                        "value": "windmill_project_onboarding"
                    },
                    "run_kind": {
                        "type": "static",
                        "value": "onboarding"
                    },
                    "project_id": {
                        "type": "javascript",
                        "expr": "flow_input.project_id || null"
                    },
                    "params": {
                        "type": "javascript",
                        "expr": "flow_input.tgz_params || null"
                    },
                    "attach_default_artifacts": {
                        "type": "javascript",
                        "expr": "flow_input.tgz_attach_default_artifacts !== false"
                    }
                }
            },
            {
                "id": "clone_repo",
                "value": {
                    "type": "script",
                    "path": "u/devgodzilla/clone_repo"
                },
                "input_transforms": {
                    "repo_url": {
                        "type": "javascript",
                        "expr": "flow_input.repo_url"
                    },
                    "branch": {
                        "type": "javascript",
                        "expr": "flow_input.branch || 'main'"
                    },
                    "workspace_path": {
                        "type": "static",
                        "value": ""
                    }
                }
            },
            {
                "id": "analyze_project",
                "value": {
                    "type": "script",
                    "path": "u/devgodzilla/analyze_project"
                },
                "input_transforms": {
                    "project_path": {
                        "type": "javascript",
                        "expr": "results.clone_repo.path"
                    }
                }
            },
            {
                "id": "initialize_speckit",
                "value": {
                    "type": "script",
                    "path": "u/devgodzilla/initialize_speckit"
                },
                "input_transforms": {
                    "project_path": {
                        "type": "javascript",
                        "expr": "results.clone_repo.path"
                    },
                    "project_name": {
                        "type": "javascript",
                        "expr": "flow_input.project_name"
                    },
                    "constitution_template": {
                        "type": "static",
                        "value": ""
                    }
                }
            }
        ]
    },
    "schema": {
        "type": "object",
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "properties": {
            "project_id": {
                "type": "integer",
                "description": "Optional TasksGodzilla project_id to associate with the emitted run",
                "default": 0
            },
            "repo_url": {
                "type": "string",
                "description": "GitHub repository URL (e.g., https://github.com/user/repo)",
                "default": ""
            },
            "project_name": {
                "type": "string",
                "description": "Name for the project",
                "default": ""
            },
            "branch": {
                "type": "string",
                "description": "Branch to clone",
                "default": "main"
            },
            "tgz_run_id": {
                "type": "string",
                "description": "Optional TasksGodzilla codex run_id to update instead of using WM_JOB_ID",
                "default": ""
            },
            "tgz_params": {
                "type": "object",
                "description": "Optional params to store in TasksGodzilla codex run record",
                "default": {}
            },
            "tgz_attach_default_artifacts": {
                "type": "boolean",
                "description": "Whether to upsert windmill.{logs,result,error} artifacts in TasksGodzilla",
                "default": true
            }
        },
        "required": [
            "repo_url",
            "project_name"
        ]
    }
}
