{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProtocolSpec",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Optional version string for the spec format."
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/StepSpec"
      }
    },
    "placeholders": {
      "type": "object",
      "description": "Template placeholder values (from CodeMachine imports or Codex planning)."
    },
    "template": {
      "type": ["object", "null"],
      "description": "Raw template payload when sourced from CodeMachine."
    },
    "metadata": {
      "type": ["object", "null"],
      "description": "Optional spec-level metadata."
    }
  },
  "required": ["steps"],
  "additionalProperties": true,
  "definitions": {
    "StepSpec": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": ["string", "null"]
        },
        "engine_id": {
          "type": ["string", "null"]
        },
        "model": {
          "type": ["string", "null"]
        },
        "prompt_ref": {
          "type": "string"
        },
        "inputs": {
          "type": ["object", "null"]
        },
        "outputs": {
          "type": "object",
          "properties": {
            "protocol": {
              "type": "string",
              "description": "Primary protocol artifact path for the step output."
            },
            "aux": {
              "type": "object",
              "description": "Auxiliary outputs keyed by consumer (e.g., codemachine).",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "step_type": {
          "type": "string",
          "enum": ["setup", "work", "qa"]
        },
        "policies": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "qa": {
          "type": "object",
          "properties": {
            "policy": {
              "type": ["string", "null"],
              "enum": ["skip", "light", "full", null]
            },
            "prompt": {
              "type": ["string", "null"]
            },
            "model": {
              "type": ["string", "null"]
            },
            "engine_id": {
              "type": ["string", "null"]
            },
            "inputs": {
              "type": ["object", "null"]
            }
          },
          "required": ["policy"],
          "additionalProperties": true
        },
        "order": {
          "type": "integer"
        },
        "metadata": {
          "type": ["object", "null"]
        }
      },
      "required": ["id", "engine_id", "prompt_ref", "qa"],
      "additionalProperties": true
    }
  }
}
